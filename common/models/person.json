{
  "name": "Person",
  "plural": "Persons",
  "base": "MhBase",
  "idInjection": true,
  "scope" : {
    "order": "lastName",
  },
  "properties": {
    "firstName": {
      "type": "string",
      "required": true,
      "queryBuilder": {
        "label": "First Name"
      }
    },
    "middleName": {
      "type": "string",
      "queryBuilder": {
        "label": "Middle Name"
      }
    },
    "lastName": {
      "type": "string",
      "required": true,
      "queryBuilder": {
        "label": "Last Name"
      }
    },
    "nickName": {
      "type": "string",
      "queryBuilder": {
        "label": "Nick Name"
      }
    },
    "prefix": {
      "type": "string",
      "queryBuilder": {
        "label": "Prefix"
      }
    },
    "suffix": {
      "type": "string",
      "queryBuilder": {
        "label": "Suffix"
      }
    },
    "gender": {
      "type": "string",
      "queryBuilder": {
        "label": "Gender",
        "input": "radio",
        "values": {
          "m": "Male",
          "f": "Female"
        }
      }
    },
    "emails": {
      "type": "object"
    },
    "dates": {
      "type": "object"
    },
    "contacts": {
      "type": "object"
    },
    "contact": {
      "type": "object"
    },
    "custom": {
      "type": "object"
    },
    "addresses": {
      "type": "object"
    },

    "tags": {
      "type": "array"
    },
    "status": {
      "type": "array"
    },
    "primaryContact": {
      "type": "string",
      "queryBuilder": {
        "label": "Primary Contact",
        "input": "select",
        "values": {
          "none": "None (no contact)",
          "email": "Email",
          "mobile": "Mobile",
          "letterHome": "Letter (Home Address)",
          "letterWork": "Letter (Work Address)",
          "letterPostal": "Letter (Postal Address)"
        }
      }
    },
    "hasAvatar": {
      "type": "boolean",
      "queryBuilder": {
        "label": "Has Profile Picture",
        "input": "radio",
        "values": {
          "false": "No",
          "true": "Yes"
        }
      }
    },
    "search": {
      "type": "string",
      "description": "Stores lowercase keywords for searching"
    }
  },
  "hidden": ["search"],
  "validations": [],
  "relations": {
    "account": {
      "type": "hasOne",
      "model": "Account"
    },
    "household": {
      "type": "referencesMany",
      "model": "Household",
      "property": "householdIds",
      "options": {
        "validate": true,
        "forceId": false
      }
    },
    "groups": {
      "type": "referencesMany",
      "model": "Group",
      "property": "groupIds",
      "options": {
        "validate": true,
        "forceId": false
      }
    },
    "notes": {
      "type": "hasMany",
      "model": "Note",
      "polymorphic": "notable"
    }
  },
  "acls": [
   {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "random"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "count"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "status"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "exportVCard"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "exportPDF"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "tags"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "setHousehold"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "search"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "root",
      "permission": "ALLOW"
    }
  ],
  "methods": []
}
